{
    "openapi": "3.0.0",
    "info": {
      "title": "Writer Agent API",
      "description": "API for writing blog posts.",
      "version": "1.0.0"
    },
    "paths": {
      "/save/content": {
        "post": {
          "summary": "save content to the storage",
          "description": "Saves the content to the storage. The content is saved to the storage.",
          "operationId": "SAVE_CONTENT",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string",
                      "description": "Key to save the content. The key is the unique identifier for the content."
                    },
                    "content": {
                      "type": "string",
                      "description": "Content to save"
                    },
                    "contentType": {
                      "type": "string",
                      "description": "Content type to save"
                    }
                  },
                  "required": ["key", "content", "contentType"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful operation",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "url": {
                        "type": "string",
                        "description": "The url to save the content."
                      }
                    },
                    "required": ["url"]
                  }
                }
              }
            },
            "400": {
              "description": "Invalid query parameter"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      }
    }
  }
  